<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supplier">
    <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/supp_listview">
    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Add_supp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        style="@style/Widget.Design.FloatingActionButton"/>

    <LinearLayout
        android:id="@+id/supp_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/supp_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3d3d3"
            android:hint="Supplier Name"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Supplier Phone"
            android:background="#f3d3d3"
            android:id="@+id/supp_phone_input"
            android:textColor="@color/colorAccent"
            android:inputType="phone"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Supplier mail"
            android:id="@+id/supp_mail_input"
            android:textColor="@color/colorAccent"
            android:background="#f3d3d3"
            android:inputType="textEmailAddress"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/supp_profile_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="Back" />

            <Button
                android:id="@+id/supp_profille_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Confirm" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>